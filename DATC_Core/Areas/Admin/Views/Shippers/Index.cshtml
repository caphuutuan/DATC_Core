@model IEnumerable<DATC_Core.Models.Shipper>

@{
    ViewData["Title"] = "Quản lý Nhân viên giao hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content py-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/Shippers/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp; Thêm mới</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Shippers/Trash" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thùng rác (@(ViewBag.count_trash ?? "?"))</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center no-sort" style="width:3rem;">ID</th>
                            <th class="no-sort">Họ tên</th>
                            <th class="no-sort">Số điện thoại</th>
                            <th class="no-sort text-center" style="width:10rem">Công ty</th>
                            <th class="no-sort text-center" style="width:10rem">Giao hàng ngày</th>
                            <th class="no-sort text-center" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.ShipperId)</td>
                                <td>
                                    <a href="~/Admin/Posts/Details/@Html.DisplayFor(modelItem => item.ShipperId)">
                                        @Html.DisplayFor(modelItem => item.ShipperName)
                                    </a>
                                </td>
                                <td>  @Html.DisplayFor(modelItem => item.Phone)</td>
                                <td class="text-center">@item.Company</td>
                                <td class="text-center">@item.ShipDate</td>
                                <td class="text-center">
                                    @* <label class="switch">
                                @if (item.Published == true)
                                {
                                <input class="changeStatus" data-id="@item.ShipperId" data-controller="Shippers" type="checkbox" checked>
                                }
                                else
                                {
                                <input class="changeStatus" data-id="@item.ShipperId" data-controller="Shippers" type="checkbox">
                                }
                                <span class="slider round"></span>
                                </label> *@
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                        <a href="@Url.Action("Edit", "Shippers", new { id = item.ShipperId })" class="text-white"><i class="fas fa-pen"></i></a>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                        <a href="@Url.Action("Delete", "Shippers", new { id = item.ShipperId })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


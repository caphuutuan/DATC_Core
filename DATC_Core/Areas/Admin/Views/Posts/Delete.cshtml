                        <td scope="col">  @Html.DisplayFor(model => model.MetaDesc)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Views)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Views)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Published)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Published)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>

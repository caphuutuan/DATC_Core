@model DATC_Core.Models.Location

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content my-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/AdminLocations/Edit/@Model.LocationId" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Sửa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/AdminLocations/DelTrash/@Model.LocationId" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp;Xóa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/AdminLocations/Index/@Model.LocationId" class="text-white"><i class="fas fa-door-open fa-xs"></i>&nbsp;Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.LocationId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.LocationId)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Name )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Name)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Type)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Type)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Slug)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Slug)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.NameWithType)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.NameWithType)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.PayWithType)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.PayWithType)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ParentCode)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ParentCode)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Levels)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Levels)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>


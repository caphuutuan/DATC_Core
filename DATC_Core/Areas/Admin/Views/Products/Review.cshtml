@model DATC_Core.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content my-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/Products/Edit/@Model.ProductId" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Sửa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Products/DelTrash/@Model.ProductId" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp;Xóa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Products/Index/@Model.ProductId" class="text-white"><i class="fas fa-door-open fa-xs"></i>&nbsp;Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ProductId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ProductId)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ProductName )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ProductName)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ShortDesc)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ShortDesc)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Description )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Description)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.CateId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.CateId)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Price )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Price)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Discount)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Discount)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Thumb )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Thumb)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Video)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Video)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.CreateDate )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.CreateDate)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ModifiedDate)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ModifiedDate)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.BestSeller )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.BestSeller)</td>
                    <tr>
                    <tr>

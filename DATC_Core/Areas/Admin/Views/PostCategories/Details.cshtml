@model DATC_Core.Models.PostCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content my-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="~/Admin/PostCategories/Edit/@Model.CateId" class="text-white"><i class="fas fa-pen fa-xs"></i>&nbsp; Sửa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/PostCategories/DelTrash/@Model.CateId" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp;Xóa</a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/PostCategories/Index/@Model.CateId" class="text-white"><i class="fas fa-door-open fa-xs"></i>&nbsp;Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">

                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.CateId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.CateId)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.CateName )</th>
                        <td scope="col">  @Html.DisplayFor(model => model.CateName)</td>
                    <tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Description)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.ParentId)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.ParentId)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Levels)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Levels)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Ordering)</th>
                        <td scope="col">  @Html.DisplayFor(model => model.Ordering)</td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Published)</th>
                        <td scope="col"> 
                            @if(Model.Published == true){
                                        <span>Actived</span>
                                    }
                                    else
                                    {
                                <span>InActived</span>

                                    }
                                </td>
                    </tr>
                    <tr>
                        <th scope="col"> @Html.DisplayNameFor(model => model.Cover)</th>
                        <td scope="col">
                                    @if (Model.Cover != null)
                                    {
                                <img src="~/images/postCatgories/@Model.Cover" style="width: 110px;object-fit: contain;" alt="Cover" />
                                    }
                                    else
                                    {

                                    }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>


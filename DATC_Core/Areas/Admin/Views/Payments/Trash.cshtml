@model IEnumerable<DATC_Core.Models.Payment>

@{
    ViewData["Title"] = "Thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content py-2">
    <div class="container-fluid">
        <!--Content-->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h5 class="text-csm">@ViewBag.Title</h5>
                    </div>
                    <div class="col-4">
                        <div class="float-right pt-1">
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="~/Admin/Payments" class="text-white"> <i class="fas fa-sign-out-alt "></i>&nbsp; Thoát</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="cate1" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center no-sort" style="width:3rem;">ID</th>
                            <th class="no-sort">Hình thức thanh toán</th>
                            <th class="no-sort">Ảnh</th>
                            <th class="no-sort text-center" style="width:10rem">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <td class="text-center">@Html.DisplayFor(modelItem => item.PaymentId)</td>
                                <td>
                                    <a href="~/Admin/AdminCategories/Details/@Html.DisplayFor(modelItem => item.PaymentId)">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </a>
                                </td>
                                <td>  @Html.DisplayFor(modelItem => item.Image)</td> *@
                                <td class="text-center">@item.PaymentId</td>
                                <td><a href="#">@item.Name</a></td>
                                <td><a href="#">@item.Image</a></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Khôi phục">
                                        <a href="@Url.Action("ReTrash", "Category", new { id = item.PaymentId })" class="text-white"><i class="fas fa-undo-alt"></i></a>
                                    </button>
                                    <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa vĩnh viễn">
                                        <a href="@Url.Action("Delete", "Category", new { id = item.PaymentId })" class="text-white"><i class="far fa-trash-alt"></i></a>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
